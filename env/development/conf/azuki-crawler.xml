<crawler>

	<controller contextpath="/ctl" port="9090" charset="UTF-8" />
	<manager contextpath="/manager" port="8080" basedir="webapps/manager"
		charset="UTF-8" />

    <logger config="conf/log4j.xml" />

	<threads>
		<thread title="ダウンローダータスク" description="" startup="false">
			<task classname="org.azkfw.crawler.task.StandAloneWebCrawleDownloaderTask">
			</task>
			<schedule classname="org.azkfw.crawler.schedule.TimerSchedule">
				<parameter key="interval" value="60s" />
			</schedule>
		</thread>
		<thread title="HTML解析タスク" description="" startup="false">
			<task classname="org.azkfw.crawler.task.StandAloneWebCrawleParserTask">
			</task>
			<schedule classname="org.azkfw.crawler.schedule.TimerSchedule">
				<parameter key="interval" value="5s" />
			</schedule>
		</thread>
		<thread title="食べログ解析タスク" description="" startup="false">
			<task classname="org.azkfw.crawler.task.TabelogWebCrawleParserTask">
			</task>
			<schedule classname="org.azkfw.crawler.schedule.TimerSchedule">
				<parameter key="interval" value="1s" />
			</schedule>
		</thread>
	</threads>

</crawler>